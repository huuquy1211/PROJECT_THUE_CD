@model THUE_CD.Models.Item
@using THUE_CD.ViewModel;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<!-- MAIN CONTENT-->
<!-- FORM Item-->
<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTitle">Thêm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Xữ lý controller -->
                <form class="mt-5" method="POST" id="form">
                    <fieldset id="SubmitForm">
                        <label>Mã Đĩa</label>
                        @Html.TextBoxFor(m => m.Id_Item, new { @id = "Item_Id", disabled = true })
                        <div class="form-group" id="Title">
                            <label>Tựa Đĩa</label>
                            <select id="SelectTitle" onchange="SelectChange()"></select>
                        </div>
                        <div class="form-group" id="TypeDisk">
                            <label>Loại Đĩa</label>
                            <select id="SelectType"></select>
                        </div>
                        <div class="form-group" id="Status">
                            <label>Trạng thái</label>
                            <select id="SelectStatus">
                                <option value="Trên Kệ">Trên Kệ</option>
                                <option value="Đã được thuê">Đã được thuê</option>
                                <option value="Đã đặt trước">Đã đặt trước</option>
                            </select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                            <button type="button" class="btn btn-primary" id="SaveItemRecord">Xác Nhận</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- FORM ĐĂNG KÍ KHÁCH HÀNG-->
<!-- FORM XOA-->
<div class="modal fade" id="DeleteConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Xóa Đĩa</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <h4>Bạn muốn xóa đĩa này?</h4>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Cancle</a>
                <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Confirm</a>
            </div>
        </div>
    </div>
</div>
<!-- FORM LOAD DANH SACH KHACH HANG-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">Danh sách đĩa</h2>
                        <button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" onclick="AddNewItem()">
                            <i class="zmdi zmdi-plus"></i>add
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <hr />
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table table-borderless table-striped table-earning" id="myDatatable">
                            <thead>
                                <tr>
                                    <th>Mã Đĩa</th>
                                    <th>Tựa Đĩa</th>
                                    <th>Loại Đĩa</th>
                                    <th>Trạng Thái</th>
                                    <th>Action(Delete)</th>
                                </tr>
                            </thead>
                            <tbody id="SetItemList" data-toggle="modal">
                                <tr id="LoadingStatus"></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Xây dựng phần mềm - Nhóm 5</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END MAIN CONTENT-->
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script>

    $(document).ready(function (evt) {

        //Binding danh sách select Title
        $.ajax({
            type: 'Get',
            url: '/Titles/GetTitlesList',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success:
                function TitleBind(lst) {
                    var SetData = $("#SelectTitle");
                    SetData.html("");
                    $.each(lst, function (index, value) {
                        var Data = "<option value='" + value.Id_Title + "'>" + value.TitleName + "</option>"
                        SetData.append(Data);
                    })
                }
        })
        //Binding danh sách select TypeDisk
        $.ajax({
            type: 'Get',
            url: '/TypeDisks/GetTypeList',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success:
                function TitleBind(lst) {
                    var SetData = $("#SelectType");
                    SetData.html("");
                    $.each(lst, function (index, value) {
                        var Data = "<option value='" + value.Id_Type + "'>" + value.TypeName + "</option>"
                        SetData.append(Data);
                    })
                }
        })
        //Load danh sách item
        var input1 = "";
        $.ajax({
            type: 'GET',
            cache: false,
            url: './GetItemList',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            data: JSON.stringify({ input: input1 }),
            success:
                function DataBind(ItemList) {
                    //This Code For Receive All Data From Controller And Show It In Client Side
                    var SetData = $("#SetItemList");
                    $.each(ItemList, function (index, value) {
                        var Data = "<tr class='row_" + value.Id_Item + "'>" +
                            "<td onclick='EditItemRecord(" + value.Id_Item + ")'>" + value.Id_Item + "</td>" +
                            "<td onclick='EditItemRecord(" + value.Id_Item + ")'>" + value.TitleName + "</td>" +
                            "<td onclick='EditItemRecord(" + value.Id_Item + ")'>" + value.TypeName + "</td>" +
                            "<td onclick='EditItemRecord(" + value.Id_Item + ")'>" + value.Status + "</td>" +
                            "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteItemRecord(" + value.Id_Item + ")'><span class='glyphicon glyphicon-trash'>Xóa</span></a>" + "</td>" + "</tr>";
                        SetData.append(Data);
                        $("#LoadingStatus").html(" ");
                    })
                },

            error: function (msg) {

                alert('Không thành công');
            }

        })

    });
    //sự kiện thay đổi Typedisk khi select Title
    function SelectChange() {
        var val = document.getElementById('SelectTitle').value;
        $.ajax({
            type: 'Get',
            url: '/TypeDisks/GetTypeByTitle?Id_Title='+val,
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success:
                function TitleBind(lst) {
                    $("#SelectType").val(lst);
                }
        })
    }


    //
    function DeleteItemRecord(itemId) {

        alert(itemId);
    }

    //Show The Popup Modal For Add New Customer
    function AddNewItem(Id_Item) {
        document.getElementById('SelectType').disabled="true";
        document.getElementById('Item_Id').hidden = "true";
      //  document.getElementById('Item_Id').innerHTML="Auto";
        $("#form")[0].reset();
        $("#Item_Id").val(0);
        $("#ModalTitle").html("Thêm Đĩa");
        $("#MyModal").modal();
    }
    //Show The Popup Modal For Edit Customer Record
    function EditItemRecord(Id_Item) {
        $("#ModalTitle").html("Cập nhật thông tin đĩa");
        $("#MyModal").modal();

        $.ajax({
            type: "GET",
            url: '/Item/GetItemById?Id_Item=' + Id_Item,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#Item_Id").val(obj.Id_Item);
                $("#SelectTitle").val(obj.Id_Title);
                $("#SelectType").val(obj.Id_TypeDisk);
                $("#SelectStatus").val(obj.Status);

            }
        });
    }
    //Save
    $("#SaveItemRecord").click(function () {

        var Id_Item = document.getElementById("Item_Id").value;
        var Id_Title = document.getElementById("SelectTitle").value;
        var Status = document.getElementById("SelectStatus").value;
        $.ajax({
            type: "POST",
            url: "/Item/SaveItemInDatabase?Id_Item=" + Id_Item + "&Id_Title=" + Id_Title + "&Status=" + Status,

            success: function () {
                alert("Success!");
                window.location.href = "/Item/Index";
                $("#MyModal").modal("hide");
            }
        })
    })

    var DeleteItemRecord = function (Id_Item) {
        $("#Item_Id").val(Id_Item);
        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        var Item_Id = $("#Item_Id").val();
        $.ajax({
            type: "POST",
            url: "/Item/DeleteItemRecord?Id_Item=" + Item_Id,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                $(".row_" + Item_Id).remove();
            },
            error: function () {

                alert('Không thành công');
            }
        })
    }
</script>
