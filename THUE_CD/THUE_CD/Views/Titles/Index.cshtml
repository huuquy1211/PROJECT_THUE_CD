@model THUE_CD.Models.Title
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<!-- MAIN CONTENT-->
<!-- FORM Title-->
<div class="modal fade" id="MyModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalTitle">Thêm</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Xữ lý controller -->
                <form class="mt-5" method="POST" id="form">
                    <fieldset id="SubmitForm">
                        <label>Mã Tiêu Đề</label>
                        @Html.TextBoxFor(m => m.Id_Title, new { @id = "Title_Id", disabled = true })
                        <div class="form-group" id="Title">
                            <label>Tiêu Đề</label>
                            @Html.TextBoxFor(m => m.Name, new { @id = "Title_Name" })
                        </div>
                        <div class="form-group" id="TypeDisk">
                            <label>Loại Đĩa</label>
                            <select id="SelectType"></select>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Thoát</button>
                            <button type="button" class="btn btn-primary" id="SaveTitleRecord">Xác Nhận</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- FORM XOA-->
<div class="modal fade" id="DeleteConfirmation">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Xóa Tiêu Đề</h4>
                <a href="#" class="close" data-dismiss="modal">&times;</a>
            </div>
            <div class="modal-body">
                <h4>Bạn muốn xóa tiêu đề này?</h4>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Hủy</a>
                <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Xác Nhận</a>
            </div>
        </div>
    </div>
</div>
<!-- FORM LOAD DANH SACH TIEU DE-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="overview-wrap">
                        <h2 class="title-1">Danh sách tiêu đề</h2>
                        <button class="au-btn au-btn-icon au-btn--blue" data-toggle="modal" onclick="AddNewTitle()">
                            <i class="zmdi zmdi-plus"></i>Add
                        </button>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <hr />
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table table-borderless table-striped table-earning" id="myDatatable">
                            <thead>
                                <tr>
                                    <th>Mã Tiêu Đề</th>
                                    <th>Tiêu Đề</th>
                                    <th>Loại</th>
                                    <th>Số lượng bản sao</th>
                                    <th>Action(Delete)</th>
                                </tr>
                            </thead>
                            <tbody id="SetTitleList" data-toggle="modal">
                                <tr id="LoadingStatus"></tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Xây dựng phần mềm - Nhóm 5</a>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END MAIN CONTENT-->
<script src="https://code.jquery.com/jquery-1.10.2.js"></script>
<script>

    $(document).ready(function (evt) {


        //Binding danh sách select TypeDisk
        $.ajax({
            type: 'Get',
            url: '/TypeDisks/GetTypeList',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success:
                function TitleBind(lst) {
                    var SetData = $("#SelectType");
                    SetData.html("");
                    $.each(lst, function (index, value) {
                        var Data = "<option value='" + value.Id_Type + "'>" + value.TypeName + "</option>"
                        SetData.append(Data);
                    })
                }
        })
        //Load danh sách item
        var input1 = "";
        $.ajax({
            type: 'GET',
            cache: false,
            url: './GetTitleList',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            data: JSON.stringify({ input: input1 }),
            success:
                function DataBind(TitleList) {
                    //This Code For Receive All Data From Controller And Show It In Client Side
                    var SetData = $("#SetTitleList");
                    $.each(TitleList, function (index, value) {
                        var Data = "<tr class='row_" + value.Id_Title + "'>" +
                            "<td onclick='EditTitleRecord(" + value.Id_Title + ")'>" + value.Id_Title + "</td>" +
                            "<td onclick='EditTitleRecord(" + value.Id_Title + ")'>" + value.TitleName + "</td>" +
                            "<td onclick='EditTitleRecord(" + value.Id_Title + ")'>" + value.TypeName + "</td>" +
                            "<td onclick='EditTitleRecord(" + value.Id_Title + ")'>" + value.Count + "</td>" +
                            "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteTitleRecord(" + value.Id_Title + ")'><span class='glyphicon glyphicon-trash'>Xóa</span></a>" + "</td>" + "</tr>";
                        SetData.append(Data);
                        $("#LoadingStatus").html(" ");
                    })
                },

            error: function (msg) {

                alert('Không thành công');
            }

        })

    });
