    //Show The Popup Modal For Add New Customer
    function AddNewTitle(Id_Title) {
        document.getElementById('Title_Id').hidden = "true";
      //  document.getElementById('Item_Id').innerHTML="Auto";
        $("#form")[0].reset();
        $("#Title_Id").val(0);
        $("#ModalTitle").html("Thêm Tiêu Đề");
        $("#MyModal").modal();
    }
    //Show The Popup Modal For Edit Customer Record
    function EditTitleRecord(Id_Title) {
        $("#ModalTitle").html("Cập nhật thông tin tiêu đề");
        $("#MyModal").modal();

        $.ajax({
            type: "GET",
            url: '/Titles/GetTitleById?Id_Title=' + Id_Title,
            success: function (data) {
                var obj = JSON.parse(data);
                $("#Title_Id").val(obj.Id_Title);
                $("#Title_Name").val(obj.TitleName);
                $("#SelectType").val(obj.Id_Type);


            }
        });
    }
    //Save
    $("#SaveTitleRecord").click(function () {

        var Id_Title = document.getElementById("Title_Id").value;
        var Name_Title = document.getElementById("Title_Name").value;
        var Type = document.getElementById("SelectType").value;
        $.ajax({
            type: "POST",
            url: "/Titles/SaveTitleInDatabase?Id_Title=" + Id_Title + "&Name_Title=" + Name_Title + "&Type=" + Type,

            success: function () {
                alert("Success!");
                window.location.href = "/Titles/Index";
                $("#MyModal").modal("hide");
            }
        })
    })

    var DeleteTitleRecord = function (Id_Title) {
        $("#Title_Id").val(Id_Title);
        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        var Item_Id = $("#Title_Id").val();
        $.ajax({
            type: "POST",
            url: "/Titles/DeleteTitleRecord?Id_Title=" + Title_Id,
            success: function (result) {
                $("#DeleteConfirmation").modal("hide");
                $(".row_" + Title_Id).remove();
            },
            error: function () {

                alert('Không thành công');
            }
        })
    }
</script>

